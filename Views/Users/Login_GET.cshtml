@model Diss.ViewModels.LoginView
@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login_POST", "Users", FormMethod.Post))
{
    <div class="container ">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(p => p.Username, new { @class = "form-control", @placeholder = "Username" })
                            @Html.ValidationMessageFor(p => p.Username)
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-unlock"></i></span>
                            </div>
                            @Html.PasswordFor(p => p.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(p => p.Password)
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account? <a href="#"> Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(function () {
            if ('@TempData["message"]' == "wrong") {
                toastr["error"]("Invalid username or password.");
            }
        })
    </script>
}

@section styles {
    <link href="~/Content/css/users.css" rel="stylesheet" />
}
