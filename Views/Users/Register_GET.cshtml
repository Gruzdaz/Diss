@model Diss.ViewModels.RegisterView
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Register_POST", "Users", FormMethod.Post))
{ 
    <h5 class="field-validation-error">@Model.ErrorMessage</h5>

    <div class="container ">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Register</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            @Html.TextBoxFor(p => p.Username, new { @class = "form-control", @placeholder = "Username" })
                            @Html.ValidationMessageFor(p => p.Username)
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-unlock"></i></span>
                            </div>
                            @Html.PasswordFor(p => p.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(p => p.Password)
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox">Accept Terms and Conditions
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@section styles {
    <link href="~/Content/css/users.css" rel="stylesheet" />
}